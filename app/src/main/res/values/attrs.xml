<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HPB">
        <attr name="strokeWidth" format="dimension"/>
        <attr name="progress" format="float"/>
        <attr name="progressColor"/>
        <attr name="android:min" format="float"/>
        <attr name="android:max" format="float"/>
        <attr name="progressBgColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="period" format="integer"/>
        <attr name="mode" format="enum">
            <enum name="determinate" value="1"/>
            <enum name="indeterminate" value="2"/>
            <enum name="drive" value="3"/>
        </attr>
    </declare-styleable>
</resources>