<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lionmobi.dayu.myapplication">

    <application
        android:name=".ApplicationX"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="lionmobi.dayu.activity.SplashActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="lionmobi.dayu.activity.BaseActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>

        <activity android:name="lionmobi.dayu.activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>

        <activity
            android:name="lionmobi.dayu.activity.BatterySaveActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>

        <activity
            android:name="lionmobi.dayu.activity.ListAdapterActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>

        <activity
            android:name="lionmobi.dayu.activity.JunkCleanActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>

    </application>

</manifest>